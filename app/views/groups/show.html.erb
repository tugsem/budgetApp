<%= render 'layouts/navbar' %>
<div class="container mt-5">
    <div class="d-flex flex-row justify-content-between align-items-center p-3 bg-light">
    <h2>Total Value for <%= @group.name %>:</h2>
    <span><strong>$<%= get_total_value(@group) %></strong></span>
    </div>
      <% @entities.each do |entity| %>
      <div class="p-2 d-flex flex-row align-items-center justify-content-between my-3 bg-light">
        <div class="d-flex flex-column">
          <h3><%= entity.name %></h3>
          <span><%= entity.created_at.to_time.strftime('%B %e at %l:%M %p')%></span>
        </div>
        <span>$<%= entity.amount %></span>
      </div>
    <% end %>

  <div class="d-flex mt-4">
    <%= link_to "Back to categories", groups_path, class: "btn btn-primary mx-2"%>
    <%= link_to 'Add a new transaction', new_entity_path, class: "btn btn-primary mx-2"%>
  </div>
</div>